<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

    <TextView
            android:id="@+id/item_tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="left"
            android:text="@string/name"/>
    <TextView
            android:id="@+id/item_tvNameContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_alignParentRight="true" android:layout_marginRight="30dp"
            android:gravity="right"/>

    <TextView
            android:id="@+id/item_tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/item_tvName"
            android:textStyle="bold"
            android:gravity="left"
            android:text="@string/phone"/>
    <TextView
            android:id="@+id/item_tvPhoneContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_alignParentRight="true" android:layout_marginRight="30dp"
            android:layout_below="@id/item_tvNameContent"
            android:gravity="right"/>
</RelativeLayout>